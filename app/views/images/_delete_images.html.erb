<% plant.images.each do |image| %>
  <div class="flex-container">
    <div>
      <% if image.representable? %>
          <%= image_tag image.representation(resize_to_limit: [300, 300]) %>
      <% end %>
    </div>
    
    <button>
      <%= link_to "Delete this image", purge_image_path(image), data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure to delete this image?"
                          } %>
    </button>
  </div>
<% end %>